<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:orientation="vertical" >
    
		<LinearLayout 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:orientation="horizontal">
		       <ImageButton
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              android:onClick="OnClickfinish"
		              android:layout_margin="10dip"
		              android:background="#00000000"
		              android:src="@drawable/not"/>
		              
		      <TextView 
		           android:layout_width="0dp"
		           android:layout_height="wrap_content"
		           android:layout_weight="1"
		           android:layout_marginTop="10dip"
		           android:gravity="center"
		           android:text="门禁控制器配置"/>
		                
		       <ImageButton
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:background="#00000000"
		           android:onClick="OnClickSure"
		           android:layout_margin="10dip"
		           android:src="@drawable/sure"/>
		             
		  </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="IP获取方式" >
                    </TextView>

						<Spinner
						android:id="@+id/ipSettingTypesub"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						/>
                    
                    <TextView android:text="" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="IP地址" >
                    </TextView>

                    <EditText
                        android:id="@+id/editPsw8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"/>
                    
                    <TextView android:text="" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="网关" >
                    </TextView>

                    <EditText
                        android:id="@+id/editPsw9"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"/>
                    
                    <TextView android:text="" />
                </TableRow>

                  <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="子网掩码" >
                    </TextView>

                    <EditText
                        android:id="@+id/editPsw91"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"/>
                    
                    <TextView android:text="" />
                </TableRow>
                
                  <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="控制方式" >
                    </TextView>

                    <Spinner
						android:id="@+id/controlSettingType"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						/>
                    
                    <TextView android:text="" />
                </TableRow>
                
                  <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="开门延时" >
                    </TextView>

                    <EditText
                        android:id="@+id/edittimedelay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"/>
                    
                    <TextView android:text="" />
                </TableRow>
                
                  <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="按钮开门" >
                    </TextView>

                    <Spinner
						android:id="@+id/opnedoorSettingType"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						/>
                    
                    <TextView android:text="" />
                </TableRow>
                
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="防潜入" >
                    </TextView>

                    <Spinner
						android:id="@+id/ThediveSettingType"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						/>
                    
                    <TextView android:text="" />
                </TableRow>
                
                <!-- <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="读头类型" >
                    </TextView>

                    <Spinner
						android:id="@+id/readheadSettingType"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						/>
                    
                    <TextView android:text="" />
                </TableRow> -->
                
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="读头协议" >
                    </TextView>

                    <Spinner
						android:id="@+id/readheadProtocolSettingType"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						/>
                    
                    <TextView android:text="" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>