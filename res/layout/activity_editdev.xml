<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mycenter_banner"
    android:orientation="vertical" >
      <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F0FFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
         <ImageView
             android:id="@+id/endstubut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="endButtonOnClick"
            android:background="@drawable/ic_back_normal"/>
	     <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="  设备配置"
	        android:textColor="#000"
	        android:textSize="20dip" />
     
        <Button
            android:id="@+id/subBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:onClick="postDataOnClick"
            android:text="完成绑定"
            android:background="@drawable/sud_select_xml"/>
        
         <Button
            android:id="@+id/upsuo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:onClick="AddDataOnClick"
            android:text="添加锁"
            android:background="@drawable/sud_select_xml"/>
                
    </LinearLayout>
                
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="挡路的"/>
         <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:textColor="#000"
	        android:textSize="15dip"
	        android:text="H3通信板配置"/>
     
	    <ImageButton
	        android:id="@+id/RefreshOnclick"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_rotate_right_s"
	        android:background="@drawable/background_login_div"
	        android:onClick="RefreshOnclick"
	        android:padding="3dp"
	        android:layout_margin="5dp"
	        />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/background_login_div" 
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="2dp" >
            
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:text="序列号"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_sn"
                android:text="IP"
                android:layout_width="0dp "
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_height="match_parent" />  
            
            <TextView
                android:text="储存"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:layout_weight="1" />
        </LinearLayout>
        
        <ListView
            android:id="@+id/H3list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
        </ListView>
        
          <TextView
            android:id="@+id/h3notdatetext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dip"
            android:textColor="#000"
            android:text="附近没有设备╮(╯▽╰)╭"/> 
        
    </LinearLayout>
    
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="7dp"
        android:textColor="#000"
        android:textSize="15dip"
        android:text="门禁控制器"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/background_login_div"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_weight="1">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >
            
             <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:text="序列号"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_height="match_parent" />
            <TextView
                android:text="版本号"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="center_horizontal"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_sn2"
                android:text="IP"
                android:layout_width="0dp "
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="center_horizontal"
                android:layout_height="match_parent" />  
            <TextView
                android:text="状态"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_height="match_parent" />
            
            <TextView
                android:text="开门延时"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:layout_weight="1" />
        </LinearLayout>
        
        <ListView
            android:id="@+id/RKElist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
        </ListView>
        
         <TextView
            android:id="@+id/notdatetext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dip"
            android:textColor="#000"
            android:text="附近没有设备╮(╯▽╰)╭"/> 
        
    </LinearLayout>
    
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="7dp"
        android:textColor="#000"
        android:visibility="gone"
        android:textSize="15dip"
        android:text="视频配置"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_login_div"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:text="厂家"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000"
                android:layout_height="match_parent" />
            <TextView
                android:text="型号"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000"
                android:layout_height="match_parent" />

            <TextView
                android:text="IP"
                android:layout_width="0dp "
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000"
                android:layout_height="match_parent" />  
        </LinearLayout>
        <ListView
            android:id="@+id/VODlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        </ListView>
    </LinearLayout>
    
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:gravity="center_horizontal"
        android:layout_margin="7dp"
        android:textColor="#000"/>
</LinearLayout>
