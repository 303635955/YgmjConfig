<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
     <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
	      <ImageView
	          android:id="@+id/locationimg" 
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_marginLeft="5dp"
	          android:src="@drawable/btn_pb_add_pin"/>
	      <TextView
	        android:id="@+id/addresstext"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="15dp"
	        android:textColor="#000"
	        android:textSize="20sp"
	        android:gravity="center"/>
    </LinearLayout>
    
     <com.yunguo.ygmjconfig.Adapter.MyViewPager
        android:id="@+id/Housemanageparkpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="#FFFFFF" >
    </com.yunguo.ygmjconfig.Adapter.MyViewPager>
    
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radiobtu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:textSize="20sp"
            android:button="@null"
            android:background="@drawable/selecdadiobut2"
            android:textColor="@drawable/radiobut_textcolor"
            android:text="已安装"/>
        <RadioButton
            android:id="@+id/radiobtu2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textSize="20sp"
            android:background="@drawable/selecdadiobut2"
            android:textColor="@drawable/radiobut_textcolor"
            android:text="未安装"/>
    </RadioGroup>
</RelativeLayout>